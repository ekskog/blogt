extends layout

block content
  .editor-container
    h2 Edit Blog Post
    form(action="/editor" method="POST")
      .editor-form-group
        label.editor-label(for="date") You are editing the post for
        input#date(type="date" name="date" value=post.date)
      
      .editor-form-group
        label.editor-label(for="text") Post Content
        textarea#text(name="text" rows="15")= post.content
      
      .editor-submit
        button.submit-btn(type="submit") Submit

  script.
    document.getElementById('date').addEventListener('focus', function() {
      this.showPicker();
    });

  style.
    .editor-form-group {
      margin-bottom: 15px;
    }
    editor-label {
      display: block;
      margin-bottom: 5px;
    }
    input[type="date"], textarea {
      width: 100%;
      padding: 8px;
      box-sizing: border-box;
    }
    .editor-submit {
      display: flex;
      justify-content: flex-end;
    }
    editor-button[type="submit"] {
      padding: 10px 20px;
      background-color: #4CAF50;
      color: white;
      border: none;
      cursor: pointer;
    }