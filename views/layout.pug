  body
    nav.top-nav(style="border: 1px solid #000000;")
      .nav-content
        .menu-logo-container
          button.hamburger-menu
            i.fas.fa-bars
          a.logo.hasAvatar(href='/', title='a 365 blog')
            img.avatar(width='30', height='30', src='/images/avatar.jpg')
        .nav-links
          .menu-item
            a.light(href='#', title='blog') BLOG
            .submenu
              a.submenu-item(href='/posts') Latest Posts
              a.submenu-item(href='/tags/search') Search
              a.submenu-item(href='/tags/tagcloud') Tags              
              a.light#random-link(href='#', title='random post') Random Post
          .menu-item
            a.light(href='#', title='blog') EDITOR
            .submenu
              a.submenu-item(href='/editor') Create New
              a.submenu-item(href='/editor/edit') Edit Post
              a.submenu-item(href='/editor/imgupl') Upload Image
              if session.isAuthenticated
                a.submenu-item(href='/logout') Logout
              else
                a.submenu-item(href='/login?returnTo=/editor') Login           
          .menu-item
            a.light(href='https://gallery.hbvu.su', title='gallery') GALLERY
          .menu-item
            a.light(href='/pages/about', title='about') ABOUT
    .main-wrapper
      .main-content
        block content
